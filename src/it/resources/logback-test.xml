<?xml version="1.0" encoding="UTF-8"?>
<configuration info="true">

    <!-- NOTE(AR) This properties file is generated by Sbt -->
    <variable resource="logback-test.properties" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${logback.custom.targetPath}/log/${name}.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${name}"}</customFields>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="uk.gov.nationalarchives.omega.api" level="DEBUG"/>

</configuration>
